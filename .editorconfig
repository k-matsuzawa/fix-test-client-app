root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false 

indent_style = tab
indent_size = 4
tab_width = 4

[*.go]
trim_trailing_whitespace = true

[{*.js,*.jsx,*.tsx,*.ts,*.proto,*.json,*.yml}]
indent_style = space 
indent_size = 2
trim_trailing_whitespace = true

[*.sql] 
indent_style = space 
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_style = space 
indent_size = 4
